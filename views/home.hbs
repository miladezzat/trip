<!--- Start of the popular destinations section ------>
<section class="gallery">
    <div class="container">
        <h5 class="head-section">Popular destinatons</h5>
        <div class="grid">
            {{#each popular_destination}}
            <div class="grid-item popular-destinations">
                <img src="{{this.card_icon}}" alt="" class="hotel-img" height="230px" width="230px">
                <h5 class="hotel-name">{{this.place_name}}</h5>
                <a href="/place/{{this._id}}/detailedLocations" class="btn des-btn">Explore</a>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<!--- End of the popular destinations section ------>
<!--- Start of the contact section ------>
<section class="contact">
    <div class="container">
        <h5 class="head-section">
            Contact
            <span class="sub-heading">Get in touch with us</span>
        </h5>
        <div class="contact-content">
            <div class="wrapper">
                <img src="https://images.unsplash.com/photo-1470074558764-4e577e98bc85?ixlib=rb-1.2.1&auto=format&fit=crop&w=701&q=80"
                    alt="">
            </div>
            <form action="" class="contact-form">
                <div class="input-group-wrap">
                    <div class="input-group">
                        <input type="text" class="input-contact" name="" placeholder="Name" required>
                    </div>
                    <div class="input-group">
                        <input type="email" class="input-contact" name="" placeholder="E-mail" required>
                    </div>
                </div>
                <div class="input-group">
                    <input type="email" name="" class="input-contact" placeholder="Subject" required>
                </div>
                <div class="input-group">
                    <textarea type="text" class="input-contact" rows="9" placeholder="Message" required></textarea>
                </div>
                <button type="submit" name="button" class="btn form-buttom">Submit</button>
            </form>
        </div>
    </div>
</section>
